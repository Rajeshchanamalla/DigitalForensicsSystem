# ====================================================
# Environment Variables Template
# Copy this to .env and fill in your values
# ====================================================

# Server
PORT=3000

# MySQL Database (provided by Railway MySQL plugin)
DB_HOST=your-railway-mysql-host
DB_USER=root
DB_PASSWORD=your-railway-mysql-password
DB_NAME=forensic_system_db
DB_PORT=3306

# JWT Secret (generate a random 64-char string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-this-to-a-strong-random-secret

# Blockchain
BLOCKCHAIN_ENABLED=true
# Leave BLOCKCHAIN_NETWORK empty to use embedded Ganache (recommended for cloud deployment)
# BLOCKCHAIN_NETWORK=http://localhost:8546

# IPFS - Pinata (free account at pinata.cloud)
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# Frontend URL (your Vercel deployment URL - used for CORS)
FRONTEND_URL=https://your-app.vercel.app

# Email (optional - for notifications)
# EMAIL_USER=your-gmail@gmail.com
# EMAIL_PASS=your-app-password
